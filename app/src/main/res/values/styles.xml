<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_green_600</item>
        <item name="colorPrimaryDark">@color/material_green_800</item>
        <item name="colorAccent">@color/material_indigo_A200</item>
    </style>

    <style name="EmptyView">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_deep_teal_500</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
